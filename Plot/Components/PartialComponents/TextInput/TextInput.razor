@code {
    [Parameter] private string Value { get; set; }
    [Parameter] private string Placeholder { get; set; }
    [Parameter] private string Id { get; set; }
    [Parameter] private string Class { get; set; }
    private string InputStyle = "";


    public void displayError () {
        InputStyle = "border: 2px solid red;";
        StateHasChanged(); // Force UI refresh
    }
}

<input id="@Id" class="TextInput @Class" placeholder="@Placeholder" @bind="Value" style="@InputStyle" />
