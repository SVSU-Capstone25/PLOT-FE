@using System

<div class="form-group">
    <!-- Label based on LabelPosition -->
    @if (!string.IsNullOrEmpty(Label))
    {
        <label class="@LabelPosition">@Label</label>
    }

    <!-- Input Field -->
    <input type="text" id="@Id" class="form-control @GetCssClass()" placeholder="@GetPlaceholderText()" 
           @bind="@Value" @bind:event="oninput" />
</div>

@code {
    [Parameter] public string Id { get; set; } = string.Empty;
    [Parameter] public string Class { get; set; } = string.Empty;
    [Parameter] public string? Label { get; set; }
    [Parameter] public string LabelPosition { get; set; } = "top"; // 'top', 'left', or 'none'
    [Parameter] public string? Placeholder { get; set; }
    [Parameter] public string? Value { get; set; }
    [Parameter] public EventCallback<string> ValueChanged { get; set; }
    [Parameter] public bool IsValid { get; set; }

    // Get the CSS class based on validity
    private string GetCssClass()
    {
        return IsValid ? "" : "is-invalid";
    }

    // Placeholder text to indicate validation message
    private string GetPlaceholderText()
    {
        return IsValid ? Placeholder ?? "" : "This is a required field";
    }
}
