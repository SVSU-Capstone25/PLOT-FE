@using Plot.Services

@inject NavigationManager Navigation
@inject ICookie cookie

@* 
TODO: Change to use ul with li
    Make sure they're styled in a row and remove the list styling from

    Delete everything in the CSS, only thing that should be kept in there is setting the navbar background to the brand teal color.

    Everything should use Blazor Utility classes 
    Delete extra classes
*@
<nav class="navbar platos-blue">
    <ul class="navbar-nav flex-row w-100">
    <li class="nav-item px-3">
        <a class="nav-link text-white" href="/store-dashboard">
            Stores <i class="fa-solid fa-bag-shopping"></i>
        </a>
    </li>

    <li class="nav-item px-3">
        <a class="nav-link text-white" href="/user-dashboard">
            Users <i class="fa-solid fa-shirt"></i>
        </a>
    </li>
    @* Danielle Smith - 3/29/2025
    Make it so help modal only shows on the floorset editor *@
    @if (Navigation.Uri.Contains("/floorset-editor"))
    {
        <li class="nav-item px-3">
            <a class="nav-link text-white" data-bs-toggle="modal" data-bs-target="#helpModal">
                Help <i class="fa-solid fa-question"></i>
            </a>
        </li>
    }
    <li class="nav-item px-3 ms-auto">
        <a class="nav-link text-white" @onclick="async () => await OnLogoutClick()">
            Logout
        </a>
    </li>
    </ul>
</nav>

@code {
    [Parameter]
    public string? Id { get; set; }

    [Parameter]
    public string? Class { get; set; }

    private async Task OnLogoutClick() {
        await cookie.SetValue("Auth", string.Empty);
        Navigation.NavigateTo("/login", forceLoad: true);
    }
}