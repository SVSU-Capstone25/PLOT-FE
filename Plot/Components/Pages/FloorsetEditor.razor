@page "/floorset-editor"
@using Plot.Components.PartialComponents.SlideOut

<!-- Grid Area -->
<div class="wrapper" width="500px" height="500px">
    <div class="main-content">
        <div class="grid">
            @for (int i = 0; i < 50; i++)
            {
                @for (int j = 0; j < 50; j++)
                {
                    <div class="grid-cell" id="cell-@i-@j"></div>
                }
            }
        </div>
    </div>

</div>

<SlideOut Id="FloorsetSlideOut">
    <p>
        text
    </p>
    <Button Class="Button" Id="buttonImportFile" Variant="primary" data-bs-toggle="modal" data-bs-target="#importExcelModal"
        Icon="fa-solid fa-file-import" IsDisabled=true TextAlignment="center">
        Import Excel File
    </Button>

    <Modal Title="Import Excel File" Id="importExcelModal" Class="modal-dialog">
    <BodyContent>
        <h4>Import an Excel File</h4>
		<FileInput id="ImportFile" OnFileSelected="ImportFile"></FileInput>
    </BodyContent>

    <FooterContent>
		<!--Import button-->
		<Button Id="buttonImportSalesData" Variant="success"
			IsDisabled=true TextAlignment="left">
		Cancel
		</Button>
    </FooterContent>
    </Modal>
</SlideOut>