    @* function to populate dropdown with the list of users. This is currently used for 
        adding users to a store when creatingor editing a store *@
        function populateDropdown(dropdownId) {
            @* hard coded values while DB is not linked *@
        const options = [
                { value: "1,Homer,Simpson", text: "Homer Simpson" },
                { value: "2,Marge,Simpson", text: "Marge Simpson" },
                { value: "3,Bart,Simpson", text: "Bart Simpson" },
                { value: "4,Sideshow,Bob", text: "Sideshow Bob" }
            ];

            const dropdown = document.getElementById(dropdownId);
            @* clear the dropdown of ay elements *@
                dropdown.innerHTML = "";
            @* create the options *@
                options.forEach(option => {
                    const opt = document.createElement("option");
                    opt.value = option.value;
                    opt.textContent = option.text;
                    dropdown.appendChild(opt);
                });
        }

    @* function to remove all of the elements from a div except for a specific one
        This is being used to clear out the Users in the Add Store modal. The Add Users button
        should stay though. *@
        function clearDivExceptById(divId, exceptionId) {
            const div = document.getElementById(divId);

            @* Lopp through the div children and remove all but the element specified *@
        for (let i = div.children.length - 1; i >= 0; i--) {
                if (div.children[i].id !== exceptionId) {
                    div.children[i].remove();
                }
            }
        }
