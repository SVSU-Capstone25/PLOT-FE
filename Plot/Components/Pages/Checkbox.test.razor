@page "/test/checkbox"

<PageTitle>Checkbox</PageTitle>

@code {
    private bool isChecked = true;

    private void HandleCheckChanged(bool newState)
    {
        isChecked = newState;
        Console.WriteLine($"Checkbox is now {(isChecked ? "Checked" : "Unchecked")}");
    }
}

<Checkbox Text="I'm a checkbox" />
<!-- for right now i am just passing a temporary variable i declared up top for checked to demonstrate
in the future we can pass in actual data from hour database -->
<Checkbox Text="I'm a checkbox checked by default" Checked="@isChecked" CheckedChanged="HandleCheckChanged" />
