@page "/users"

<div class="container mt-4">

    <!-- Users Table -->
    <table class="table border border-light">
        <thead>
            <tr>
                <td class="border border-light border-2">Employee Name</td>
                <td class="border border-light border-2">Employee Number</td>
                <td class="border border-light border-2">Role</td>
            </tr>
        </thead>
        <tbody>
            <!-- Hardcoded rows for the demo --- 
            Replace with dynamic rows for finished product -->
            <tr>
                <td class="border border-light border-2">Clayton Cook</td>
                <td class="border border-light border-2">#1234567890</td>
                <td class="border border-light border-2">
                    <div>
                        <div>Owner</div>
                        <div>
                            <Dropdown
                            Id="RoleDropDown"
                            DropdownText="@(new List<string> { "Edit", "Delete" })"
                            DropdownLinks="@(new List<string> { "users#EditUserModal", "users#DeleteUserModal"  })"
                            LabelText="Role"
                            DropdownIcons="@(new List<string> { "fa-solid fa-pen-to-square", "fa-regular fa-trash-can" })"
                            
                             />
                        </div>
                    </div>
                </td>
            </tr>
            <tr>
                <td class="border border-light border-2">John Doe</td>
                <td class="border border-light border-2">#1234567890</td>
                <td class="border border-light border-2">Manager</td>
            </tr>
            <tr>
                <td class="border border-light border-2">Jane Smith</td>
                <td class="border border-light border-2">#1234567890</td>
                <td class="border border-light border-2">Employee</td>
            </tr>
        </tbody>
    </table>

    <!--Add User Button -->
    <button class="btn btn-primary text-white" data-bs-toggle="modal" data-bs-target="#AddUserModal">
        + Add User
    </button>

    <!-- Modals -->

    <!-- Add User Modal -->

    <Modal Title="Add User" Id="AddUserModal" Variant="success" Class="standard modal-dialog">
    <BodyContent>
        <h1>Create User</h1>
        <p>Add a new user to be added to the system.</p>
        <TextInput Id="FirstName" Label="First Name" Placeholder="First Name"/>
        <TextInput Id="LastName" Label="LastName" Placeholder="Last Name"/>
        <TextInput Id="Email" Label="Email" Placeholder="Email"/>
        
        <!-- Role and Store Select Options -->

        <!-- Role Select Option -->
        <select class="form-select">
            <option selected>Select an Option</option>
            <option value="owner_role">Owner</option>
            <option value="manager_role">Manager</option>
            <option value="employee_role">Employee</option>
        </select>

        <!-- Store Select Option -->
        <select class="form-select">
            <option selected>Select an Option</option>

            <!-- To Do : Replace with stores -->
            <option value="store_1">One</option>
            <option value="store_2">Two</option>
            <option value="store_3">Three</option>
        </select>


        <img src="/img/platos_closet_logo.png">
    </BodyContent>
    <FooterContent></FooterContent>

    </Modal>

<!-- Edit User Modal -->

<Modal Title="Edit User" Id="EditUserModal" Variant="success" Class="standard modal-dialog">
    <BodyContent>
        <h1>Edit User</h1>
        <p>Edit user information</p>
        <TextInput Id="FirstName" Label="First Name" Placeholder="First Name" />
        <TextInput Id="LastName" Label="LastName" Placeholder="Last Name" />
        <TextInput Id="Email" Label="Email" Placeholder="Email" />
        
        <!-- Role and Store Select Options -->

        <!-- Role Select Option -->
        <select class="form-select">
            <option selected>Select an Option</option>
            <option value="owner_role">Owner</option>
            <option value="manager_role">Manager</option>
            <option value="employee_role">Employee</option>
        </select>

        <!-- Store Select Option -->
        <select class="form-select">
            <option selected>Select an Option</option>

            <!-- To Do : Replace with stores -->
            <option value="store_1">One</option>
            <option value="store_2">Two</option>
            <option value="store_3">Three</option>
        </select>


        <img src="/img/platos_closet_logo.png">
    </BodyContent>
    <FooterContent></FooterContent>

</Modal>




<!-- Delete User Modal -->

<Modal Title="Confirm Deletion" Id="DeleteUserModal" Variant="success" Icon="fa-solid fa-check" Class="standard modal-dialog">
    <BodyContent>
        <h1>Are you SURE you want to delete this user?</h1>
        <TextInput Id="deleteTextInput" Label="If so, type DELETE here" Placeholder="Type DELETE here" />

    </BodyContent>

    <!-- Button to confirm delete -->
    <FooterContent>
        <!--
        <Button Class=" Button" Id="buttonConfirmDelete" Variant="primary" OnClickFunction="deleteUser"
            Icon="fa-solid fa-ellipsis" IsDisabled=false TextAlignment="center">
            Yes, Delete
        </Button>
        -->
        <Button Class=" Button" Id="buttonConfirmDelete" Variant="primary"
            Icon="fa-solid fa-ellipsis" IsDisabled=true TextAlignment="center">
            Yes, Delete
        </Button>        
    </FooterContent>

</Modal>

