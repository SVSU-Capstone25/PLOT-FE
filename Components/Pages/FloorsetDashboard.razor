@page "/floorset-dashboard"

<PageTitle>Floorset Dashboard</PageTitle>

<div class="row px-3">
    <div class="col-md-7">
        <h1>Floorset for Flint, MI</h1>
        <h6 class="mt-3">3192 S Linden Rd, Flint, MI, 48507</h6>
    </div>
    <div class="col-md-5">
        <img class="img-fluid" src="/img/floorset_placeholder.png">
    </div>
</div>

<div class="row px-3 mt-3 gx-5">
    <div class="col-md-3">
        <img class="img-fluid" src="/img/floorset_placeholder.png">
        <p>Sept24 Layout</p>
        <i class="fa-solid fa-ellipsis float-end h-100" data-bs-toggle="dropdown"
        aria-expanded="false" style="max-width:1.9vw"></i>
        <ul class="dropdown-menu">
            <li class="dropdown-item">Floorset Options</li>
            <li><hr class="dropdown-divider"></li>
            <li>
                <a class="dropdown-item">
                    <i class="fa-solid fa-pen-to-square"></i> Edit
                </a>
            </li>
            <li>
                <a class="dropdown-item">
                    <i class="fa-solid fa-copy"></i> Copy
                </a>
            </li>
            <li>
                <a class="dropdown-item">
                    <i class="fa-solid fa-cubes"></i> Layouts
                </a>
            </li>
            <li>
                <a class="dropdown-item" data-bs-toggle="modal" data-bs-target="#confirmDeleteFloorsetModal">
                    <i class="fa-solid fa-trash"></i> Delete
                </a>
            </li>
        </ul>
    </div>
</div>

<!-- Delete Floorset Modal -->
<ModalDialog Title="Confirm Deletion" ModalID="confirmDeleteFloorsetModal" 
ModalLabel="confirmDeleteFloorsetModalLabel" ModalSize="">
    <BodyContent>
        <h4>Are you SURE you want to delete this floorset?</h4>
        <p>If so, type DELETE below.</p>
        <input type="text" id="confirmDelete" class="form-control" placeholder="Type DELETE here">
    </BodyContent>

    <FooterContent>
        <button type="button" class="btn cancel-red text-white" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn platos-blue text-white">Yes, Delete</button>
    </FooterContent>
</ModalDialog>

