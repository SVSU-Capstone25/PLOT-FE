@page "/FloorsetCreator"

<!-- Grid Area -->
<div class="wrapper" width="500px" height="500px" >   
    <div class="main-content">
        <div class="grid">
            @for (int i = 0; i < 50; i++)
            {
                @for (int j = 0; j < 50; j++)
                {
                    <div class="grid-cell" id="cell-@i-@j"></div>
                }
            }
        </div>
    </div>       
</div>

<!-- Toggle Button -->
<button class="btn btn-light toggle-btn shadow-sm" onclick="toggleSidebar()">
    <i class="fa-solid fa-bars"></i>
</button>

<!-- Sidebar -->
<div class="sidebar" id="sidebar">

    <!-- Header -->
    <div class="sidebar-header p-3">
        <div class="d-flex align-items-center justify-content-between">
            <h5 class="mb-0"> Add Fixture </h5>
            <div class="d-flex gap-2">
                <button class="btn btn-sm btn-light">
                    <i class="bi bi-gear"></i>
                </button>
                <button class="btn btn-sm btn-light">
                    <i class="bi bi-bell"></i>
                </button>
            </div>
        </div>
    </div>

    <!-- Search Bar -->
    <div class="p-3 mb-2 border-bottom">
        <div class="d-flex align-items-center mb-2">
            
            <div>
                <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
                <button><i class="bi bi-filter"></i></button>
            </div>
            
            
        </div>
        <div class="d-flex align-items-center">
            <button type="button" class="btn btn-primary btn-lg btn-block">Add Fixture</button>
        </div>
    </div>


    <!-- Fixture Area -->
    <div class="p-3 mt-3">
        
        <div>
            @for (int i = 0; i < 3; i++) 
            {
                string title = "Fixture " + i;
                <div class="mb-9">
                    <DraggableTile Title="@title"></DraggableTile>
                </div>
            }
            
            
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script>
    function toggleSidebar() {
        const sidebar = document.getElementById('sidebar');
        const toggleBtn = document.querySelector('.toggle-btn');
        sidebar.classList.toggle('collapsed');
        toggleBtn.classList.toggle('collapsed');
    }
</script>



