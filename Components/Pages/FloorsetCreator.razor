@page "/FloorsetCreator"



<div class="wrapper" width="500px" height="500px" >
   
    <!-- Main Content -->
    <div class="main-content">
        
        <!-- Add more content here -->
    </div>
    

    <!-- Toggle Button -->
    <button class="btn btn-light toggle-btn shadow-sm" onclick="toggleSidebar()">
        <i class="fa-solid fa-bars"></i>
    </button>

    <!-- Sidebar -->
    <div class="sidebar" id="sidebar">
        <div class="sidebar-header p-3">
            <div class="d-flex align-items-center justify-content-between">
                <h5 class="mb-0"> Add Fixture </h5>
                <div class="d-flex gap-2">
                    <button class="btn btn-sm btn-light">
                        <i class="bi bi-gear"></i>
                    </button>
                    <button class="btn btn-sm btn-light">
                        <i class="bi bi-bell"></i>
                    </button>
                </div>
            </div>
        </div>

        <!-- User Profile -->
        <div class="p-3 mb-2 border-bottom">
            <div class="d-flex align-items-center">
                
                <div>
                    <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
                </div>
                
                
            </div>
            <div class="d-flex align-items-center">
                <button type="button" class="btn btn-primary btn-lg btn-block">Block level button</button>
            </div>
        </div>



        @* <!-- Navigation -->
        <nav class="nav flex-column mt-2">
             <ul class="draggable-container list-group">
                <li class="list-group-item"></li>
                <li class="list-group-item"></li>
             </ul>            
            

            
        </nav> *@

        <!-- Recent Activity -->
        <div class="p-3 mt-3">
            
            <div class="d-flex align-items-center mb-5">
                <DraggableTile Title="Fixture 1" />
            </div>
            <div class="d-flex align-items-center">
                <DraggableTile Title="Fixture 2" />
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function toggleSidebar() {
            const sidebar = document.getElementById('sidebar');
            const toggleBtn = document.querySelector('.toggle-btn');
            sidebar.classList.toggle('collapsed');
            toggleBtn.classList.toggle('collapsed');
        }
    </script>
    
</div>

