<div class="allocations-sidebar">
    <div style="background-color: lightgrey;">
        <h3><i class="fa-solid fa-boxes-stacked"></i> Category Fullfillment</h3>
        <hr>

        <div class="categories-div">
            <div class="categories-list">
                <div style="display: flex;">
                    <search>
                        <form action="./search/">
                            <input type="search" id="category" name="category-query" placeholder="Search...">
                        </form>
                    </search>

                    <button>
                        <i class="fa-solid fa-sort"></i>
                    </button>

                    <button>
                        <i class="fa-solid fa-filter"></i>
                    </button>
                </div>
                                
                <div>
                    <ProgressBar iconString="fa-solid fa-bars" mainLabel="Men's" barColor="#AAD9FF" barMax=480 barValue=290 barLabel="290/480 LF"/>
                    <ProgressBar mainLabel="Pants" barColor="#AAD9FF" barMax=100 barValue=20 barLabel="20/100 LF"/>
                    <ProgressBar mainLabel="Shirts" barColor="#AAD9FF" barMax=100 barValue=30 barLabel="30/100 LF"/>
                    <ProgressBar mainLabel="Shoes" barColor="#AAD9FF" barMax=100 barValue=60 barLabel="60/100 LF"/>
                    <ProgressBar mainLabel="Socks" barColor="#AAD9FF" barMax=80 barValue=80 barLabel="80/80 LF"/>
                    <ProgressBar mainLabel="Jackets" barColor="#AAD9FF" barMax=100 barValue=100 barLabel="100/100 LF"/>
                </div>
            </div> 
        </div>
              
    </div>
    

    <div style="justify-content: center; display: flex;">
        <div class="toolbar-group btn-group">
            <!-- Edit Fixture Button -->
            <button class="toolbar-button">
                <i class="fa-solid fa-pen-to-square"></i>
            </button>

            <!-- Paint Category Button -->
            <button class="toolbar-button">
                <i class=" fa-solid fa-brush"></i>
            </button>

            <!-- Erase Category Button -->
            <button class="toolbar-button">
                <i class=" fa-solid fa-eraser"></i>
            </button>

            <!-- View Fullfillment Button -->
            <button class="toolbar-button">
                <i class=" fa-solid fa-eye"></i>
            </button>

            <!-- Edit Layout Button -->
            <button class="toolbar-button">
                <i class=" fa-solid fa-wrench"></i>
            </button>
        </div>
    </div>
</div>